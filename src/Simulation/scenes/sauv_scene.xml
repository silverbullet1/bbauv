<?xml version="1.0"?>

<!DOCTYPE UWSimScene SYSTEM "UWSimScene.dtd" >

<UWSimScene>
  <oceanState>
    <windx> 0 </windx>
    <windy> 0 </windy>
    <windSpeed> 0 </windSpeed>
    <depth> 10 </depth>
    <reflectionDamping> 0.35 </reflectionDamping>
    <waveScale> 0 </waveScale>
    <isNotChoppy> 0 </isNotChoppy>
    <choppyFactor> 0 </choppyFactor>
    <crestFoamHeight> 0 </crestFoamHeight>
    <oceanSurfaceHeight> 0 </oceanSurfaceHeight>
    <fog>
      <density> 0</density>
      <color>
	<r>0</r>
	<g>0.05</g>
	<b>0.3</b>
      </color>
    </fog>
    <color>
      <r>0.0</r>
      <g>0.05</g>
      <b>0.3</b>
    </color>
    <attenuation>
      <r>0.015</r>
      <g>0.0075 </g>
      <b> 0.005 </b>
    </attenuation>
  </oceanState>

  <simParams>
    <disableShaders> 1 </disableShaders>
    <resw> 1024 </resw>
    <resh> 760 </resh>
    <!-- <offsetp>
	 <x>0</x>
	 <y>0</y>
	 <z>0</z>
	 </offsetp>
	 <offsetr>
	 <x> 3.14</x>
	 <y> 0</y>
	 <z> -1.57 </z>
	 </offsetr> -->
    <enablePhysics> 1 </enablePhysics>
  </simParams>

  <camera>
    <freeMotion> 1 </freeMotion>
    <objectToTrack>bumblebee/base_link</objectToTrack>
    <fov> 60 </fov>
    <aspectRatio> 1.33 </aspectRatio>
    <near> 1 </near>
    <far> 10000 </far>
    <position>
      <x>-6</x>
      <y>-6</y>
      <z>8</z>
    </position> 
    <lookAt>
      <x>0</x>
      <y>0 </y>
      <z>0 </z>
    </lookAt>
  </camera>
  
  <vehicle>
    <name>bumblebee</name>
    <file>models/robot.urdf</file>
    <position>
      <x> 2.0 </x>
      <y> 2.0 </y>
      <z> 0.0 </z>
    </position>
    <orientation>
      <r>0.0</r>
      <p>0.0</p>
      <y>0.0</y>
    </orientation>
    <virtualCamera>
      <name>bowtech1</name>
      <relativeTo>body_link</relativeTo>
      <resw> 780 </resw>
      <resh> 582 </resh>
      <position>
        <x>0.0</x>
        <y>0.6</y>
        <z> 0 </z>
      </position>
      <orientation>
        <r>0</r>
        <p>0</p>
        <y>0 </y>
      </orientation>
    </virtualCamera>

    <!-- draws the FOV of the camera projected on the scene each 2 seconds
	 <showpath>2</showpath> -->
    <virtualCamera>
      <name>bowtech2</name>
      <relativeTo>base_link</relativeTo>
      <resw> 780</resw>
      <resh> 582 </resh>
      <position>
        <x>0.0</x>
        <y>0.4 </y>
        <z>-0.1</z>
      </position>  
      <orientation>
        <r>0</r>
        <p>0</p>
        <y>0</y>
      </orientation>
    </virtualCamera>
    <rangeSensor>
      <name> sonarleft </name>
      <relativeTo>body_link</relativeTo>
      <range>5</range>
      <visible>1</visible>
      <position>
	<x>0.0</x>
	<y>0.3</y>
	<z> 0 </z>
      </position>
      <orientation>
	<r>0</r>
	<p>-13.5</p>
	<y>3.145</y>
      </orientation>
    </rangeSensor>
    <rangeSensor>
      <name> sonarright </name>
      <relativeTo>body_link</relativeTo>
      <range>5</range>
      <visible>1</visible>
      <position>
	<x>0.0</x>
	<y>0.3</y>
	<z> 0 </z>
      </position>
      <orientation>
	<r>0.0</r>
	<p>16.5</p>
	<y>3.145</y>
      </orientation>
    </rangeSensor>

    <imu>
      <name>imu</name>
      <relativeTo>base_link</relativeTo>
      <position>
	<x>0</x>
	<y>0</y>
	<z>0</z>
      </position>  
      <orientation>
	<r>0</r>
	<p>0</p>
	<y>3.1415</y>
      </orientation>
      <std>0.00000001</std>
    </imu>
    
    <pressureSensor>
      <name>pressureSensor</name>
      <relativeTo>base_link</relativeTo>
      <position>
        <x>0</x>
        <y>0</y>
        <z>0.2</z>
      </position>  
      <orientation>
        <r>0</r>
        <p>0</p>
        <y>0</y>
      </orientation>
      <std>0.02</std>
    </pressureSensor>
    
    <gpsSensor>
      <name>GPSSensor</name>
      <relativeTo>base_link</relativeTo>
      <position>
        <x>0</x>
        <y>0</y>
        <z>0</z>
      </position>  
      <orientation>
        <r>0</r>
        <p>0</p>
        <y>0</y>
      </orientation>
      <std>0.00005</std>
    </gpsSensor>

    <dvlSensor>
      <name>DVLSensor</name>
      <relativeTo>base_link</relativeTo>
      <position>
        <x>-0.75</x>
        <y>0</y>
        <z>0</z>
      </position>  
      <orientation>
        <r>0</r>
        <p>0</p>
        <y>3.926</y>
      </orientation>
      <std>0.0015</std>
    </dvlSensor>

  </vehicle> 

   <object>
    <name>pool</name>
    <file>models/pool.osg</file>
    <position>
      <x> 0</x>
      <y> 0 </y>
      <z> -2.0 </z>
    </position>
    <orientation>
      <r>0</r>
      <p>0</p>
      <y>0</y>
    </orientation>
    <!-- <offsetp>
	 <x>-1.5</x>
	 <y>-3.0</y>
	 <z>0</z>
	 </offsetp> -->
    <!-- <offsetr>
	 <x> 3.1415</x>
	 <y> 0</y>
	 <z> -1.57 </z> 
	 </offsetr> -->
    <physics>
      <mass> 0 </mass>
      <collisionShapeType> trimesh </collisionShapeType>
    </physics>
  </object>

  <object>
    <name>gate</name>
    <file>models/gate.osg</file>
    <position>
      <x> 0.6 </x>
      <y> 9 </y>
      <z> -1.8 </z>
    </position>
    <orientation>
      <r>0</r>
      <p>0</p>
      <y>0</y>
    </orientation>
    <physics>
      <mass> 0 </mass>
      <collisionShapeType> trimesh </collisionShapeType>
    </physics>
  </object>
  <!-- Tried to add flare object but there's problem with the path :( 
       <object>
       <name>flare</name>
       <file>data/scenes/flare.xml</file>
       <position>
       <x> 0</x>
       <y> 0 </y>
       <z> 0 </z>
       </position>
       <orientation>
       <r>0</r>
       <p>0</p>
       <y>0</y>
       </orientation>
       </object>
