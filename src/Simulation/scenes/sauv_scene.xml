  <rosInterfaces>
    <ROSOdomToPAT>
      <topic> /dataNavigator </topic>
      <vehicleName> bumblebee </vehicleName>
    </ROSOdomToPAT>
    <PATToROSOdom>
      <topic> /bumblebee/bumblebee_odom </topic>
      <vehicleName> bumblebee </vehicleName>
    </PATToROSOdom>
    <VirtualCameraToROSImage> 
      <cameraName>bowtech1</cameraName>
      <imageTopic> /bumblebee/camera1 </imageTopic>
      <infoTopic> /bumblebee/camera1_info </infoTopic>
    </VirtualCameraToROSImage>
    <VirtualCameraToROSImage> 
      <cameraName>bowtech2</cameraName>
      <imageTopic> /bumblebee/camera2 </imageTopic>
      <infoTopic> /bumblebee/camera2_info </infoTopic>
    </VirtualCameraToROSImage>
    <RangeSensorToROSRange>
      <name>sonarleft</name>
      <topic> /bumblebee/sonarleft </topic>
      <rate> 10 </rate>
    </RangeSensorToROSRange>
    <RangeSensorToROSRange>
      <name>sonarright</name>
      <topic> /bumblebee/sonarright </topic>
      <rate> 10 </rate>
    </RangeSensorToROSRange>
    <ImuToROSImu>
      <name>imu</name>
      <topic>/bumblebee/imu</topic>
      <rate>20</rate>
    </ImuToROSImu>
    <PressureSensorToROS>
      <name>pressureSensor</name>
      <topic>/bumblebee/pressure</topic>
      <rate>5</rate>
    </PressureSensorToROS>
    <GPSSensorToROS>
      <name>GPSSensor</name>
      <topic>/bumblebee/gps</topic>
      <rate>1</rate>
    </GPSSensorToROS>
    <DVLSensorToROS>
      <name>DVLSensor</name>
      <topic>/bumblebee/dvl</topic>
      <rate>5</rate>
    </DVLSensorToROS>
  </rosInterfaces>
</UWSimScene>