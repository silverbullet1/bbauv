<!-- Used to play .bag files and uncompress compressed .bag video streams -->

<launch>

  <param name="use_sim_time" value="false"/>

  <arg name="bagfile" default="testing.bag" />
  <node pkg="rosbag" type="play" name="play" args="--clock -l $(find GUI)/$(arg bagfile)">
  </node>

  <node name="bottomRepublish" pkg="image_transport" type="republish" output="screen" args="compressed in:=/bottomcam/camera/image_rect_color raw out:=/camera/image_raw">
  <remap from="/camera/image_raw" to="/bumblebee/bottomCam"/>
  </node>
  
  <node name="frontRepublish" pkg="image_transport" type="republish" output="screen" args="compressed in:=/stereo_camera/left/image_rect_color raw out:=/camera/image_raw">
  <remap from="/camera/image_raw" to="/bumblebee/frontCam"/>

  </node>

</launch>
